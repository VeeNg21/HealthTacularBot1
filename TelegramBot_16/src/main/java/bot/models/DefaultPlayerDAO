package bot.models;

import bot.Game.DefaultPlayer;
import bot.HibernateSessionFactory;
import org.hibernate.Session;
import org.hibernate.Transaction;

import javax.persistence.Query;


public class DefaultPlayerDAO {

    Session session;

    public DefaultPlayerDAO(){

        session = HibernateSessionFactory.getSessionFactory().openSession();
    }

    public DefaultPlayer findByChatID(long chat_id) {

        DefaultPlayer defaultPlayer;

        Query query = session.createQuery("from DefaultPlayer where chat_id = :chat_id");
        query.setParameter("chat_id", chat_id);

        try {
            defaultPlayer = (DefaultPlayer) query.getSingleResult();
            return defaultPlayer;
        } catch (Exception e) {
            return null;
        } finally {
            session.close();
        }
    }

    public void save(DefaultPlayer player){
        Transaction tx1 = session.beginTransaction();
        session.save(player);
        tx1.commit();
        session.close();
    }

    public void update(DefaultPlayer player) {
        Transaction tx1 = session.beginTransaction();
        session.update(player);
        tx1.commit();
        session.close();
    }

    public void close(){

        session.close();
    }
}
