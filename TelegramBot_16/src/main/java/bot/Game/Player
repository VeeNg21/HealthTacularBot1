package bot.Game;

import java.sql.SQLException;

/**
 * interface that implements the player method
 */
public interface Player {

    void setExpectedAnswer(String expectedAnswer);
    void setCurrentAnswer(String currentAnswer);
    String getCurrentAnswer();

    void upCount();

    boolean isInGame();
    void setInGame(boolean inGame) throws SQLException;

    Long getChatId();
    void setChatId(Long chatId);

}
